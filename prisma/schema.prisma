generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BookingStatus {
  Nuovo
  Confermato
  Fatto
}

model Booking {
  id        Int           @id @default(autoincrement())
  name      String
  email     String
  datetime  DateTime
  tattoo    String
  status    BookingStatus @default(Nuovo)

  @@index([datetime])
}
